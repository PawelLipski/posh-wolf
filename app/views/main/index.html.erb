<%= form_tag("/testcase/new", method: "post") do %>
  <%= label_tag(:url, "Test case URL:") %>
  <%= text_field_tag(:url) %>
  <%= text_field_tag(:name) %>
  <%= submit_tag("Submit") %>
<% end %>

<!-- TODO: CSRF? -->
